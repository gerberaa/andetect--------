{
  "name": "andetect-browser",
  "version": "1.0.0",
  "description": "Анонімний браузер з комплексним захистом приватності",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": ["браузер", "анонімність", "приватність", "security", "anti-detection"],
  "author": "AnDetect Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "puppeteer-core": "^21.5.2",
    "socks-proxy-agent": "^8.0.2",
    "https-proxy-agent": "^7.0.2",
    "crypto": "^1.0.1",
    "node-forge": "^1.3.1",
    "sqlite3": "^5.1.6",
    "ws": "^8.14.2",
    "ua-parser-js": "^1.0.36",
    "random-useragent": "^0.5.0"
  },
  "build": {
    "appId": "com.andetect.browser",
    "productName": "AnDetect Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
